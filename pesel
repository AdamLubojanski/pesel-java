<html>
<head>
    <script>
        function sprawdz(){
            var nrpesel = document.getElementById("pesel").value;
            if (nrpesel.match(/^[0-9]{2}+[0-9][1-12]{2}+[0-9][1-31]{2}+[0-9]{5}$/)){
                document.getElementById("pesel").style.backgroundColor='green';
        }
    </script>
</head>

<body>

	Pesel
    <input type="text" id="pesel">
    <button onclick="sprawdz()">sprawdz</button>
</body>

</html>
